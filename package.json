{
  "name": "personal-finance",
  "version": "1.0.0",
  "description": "Aplicativo de finanças pessoais em Electron com dashboard e controle de cartões.",
  "main": "electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build",
    "package": "npm run build:renderer && electron-builder --dir",
    "lint": "echo \"No lint step\""
  },
  "keywords": [
    "electron",
    "financas",
    "dashboard",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "chart.js": "^4.5.1",
    "dayjs": "^1.11.18",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.2.0",
    "react-number-format": "^5.4.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.12",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.personalfinance.app",
    "productName": "Personal Finance",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.finance"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  }
}
