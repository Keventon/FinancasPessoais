{
  "name": "financas-pessoais",
  "version": "1.0.0",
  "description": "Aplicativo Finanças Pessoais em Electron com dashboard e controle de cartões.",
  "main": "electron/main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "generate:icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate:icons",
    "prepackage": "npm run generate:icons",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build",
    "package": "npm run build:renderer && electron-builder --dir",
    "lint": "echo \"No lint step\""
  },
  "keywords": [
    "electron",
    "financas",
    "dashboard",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "chart.js": "^4.5.1",
    "dayjs": "^1.11.18",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.2.0",
    "react-number-format": "^5.4.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^29.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "png2icons": "^2.0.1",
    "vite": "^7.1.12",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.financaspessoais.app",
    "productName": "Finanças Pessoais",
    "artifactName": "Financas-Pessoais-${version}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.finance",
      "executableName": "FinancasPessoais",
      "extendInfo": {
        "CFBundleDisplayName": "Finanças Pessoais",
        "CFBundleName": "Finanças Pessoais"
      }
    },
    "dmg": {
      "format": "UDZO",
      "artifactName": "Financas-Pessoais-${version}-${arch}.${ext}",
      "title": "Financas Pessoais ${version}"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    }
  }
}
